<?xml version="1.0" encoding="utf-8"?>
<com.turingking.demo.SlidingDetailsLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/slidingDetailsLayout"
    >
    <com.turingking.demo.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1200dp"
                android:text="This is frist child view"
                android:background="#66ff0000"
                />
            <Button
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test"
                />

        </LinearLayout>
    </com.turingking.demo.MyScrollView>

    <TextView
        android:id="@+id/tishi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上拉或下拉显示更多"
        android:gravity="center"
        android:padding="10dp"
        />

    <com.turingking.demo.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6600ff00"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1200dp"
                android:text="This is frist child view"
                android:background="#6600ff00"
                />

        </LinearLayout>
    </com.turingking.demo.MyScrollView>

</com.turingking.demo.SlidingDetailsLayout>
